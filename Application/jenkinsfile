pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                echo 'Checking out source code'
                git branch: 'main', url: 'https://github.com/venkatasaikrishna36/REALTIMEPROJECT.git'
            }
        }

        stage('Build Jar') {
            steps {
                echo 'Running Maven build'
                sh 'cd Application && mvn clean package'
            }
        }

        stage('Sonar Scan') {
            steps {
                echo 'Running SonarQube scan'
                sh '''
                    cd Application
                    mvn sonar:sonar \
                      -Dsonar.host.url=http://44.200.133.103:9000 \
                      -Dsonar.login=squ_7f8627fb276d28969cf843b235234f8179b2212c
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Building Docker Image'
                    sh 'cd Application && docker build -t saikrishna36/k8s:${BUILD_NUMBER} .'
                }
            }
        }

        stage('Docker Image Scan') {
            steps {
                sh 'trivy image saikrishna36/k8s:${BUILD_NUMBER}'
            }
        }

        stage('K8s Deployment using Ansible') {
            steps {
                script {
                    ansiblePlaybook(
                        credentialsId: 'ssh',
                        disableHostKeyChecking: true,
                        installation: 'ansible',
                        inventory: '/etc/ansible/inventory',
                        playbook: 'Ansible/ansible_k8s_deploy_playbook.yaml'
                    )
                }
            }
        }
    }
}
